function(gp_item_default_embedded_path_override item default_embedded_path_var)
  set(path "@executable_path")
  if(APPLE)
    set(path "@executable_path/../Frameworks")
  else()
    set(path "@executable_path")
  endif()
  set(${default_embedded_path_var} ${path} PARENT_SCOPE)
endfunction()

