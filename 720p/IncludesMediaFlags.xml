	<include name="WideViewFlags">
		<control type="group">
			<control type="image">
				<visible>true</visible>
				<posx>850</posx>
				<posy>530</posy>
				<height>60</height>
				<info>Listitem.Property(mediaTag::Studio)</info>
				<aspectratio>keep</aspectratio>
				<aligny>center</aligny>
			</control>
			<control type="image">
				<visible>true</visible>
				<posx>1030</posx>
				<posy>610</posy>
				<height>50</height>
				<info>Listitem.Property(mediaTag::contentRating)</info>
				<aspectratio>keep</aspectratio>
				<aligny>center</aligny>
			</control>
		</control>
	</include> 
 
	<include name="InfoListFlags">

		<control type="image">
			<posy>-335</posy>
			<posx>0</posx>
			<height>37</height>
			<width min="1" max="95">auto</width>
			<info>Listitem.Property(mediaTag::contentRating)</info>
			<align>right</align>
			<aspectratio>keep</aspectratio>
			<aligny>bottom</aligny>
			<visible>!Container.Content(tvshows)</visible>
		</control>

		<control type="image">
			<posy>-70</posy>
			<posx>450</posx>
			<height>60</height>
			<width min="1" max="95">auto</width>
			<info>Listitem.Property(mediaTag::contentRating)</info>
			<align>right</align>
			<aspectratio>keep</aspectratio>
			<aligny>bottom</aligny>
			<visible>Container.Content(tvshows)</visible>
		</control>

		<control type="grouplist">
			<orientation>horizontal</orientation>
			<itemgap>20</itemgap>
 
			<control type="image">
				<visible>!IsEmpty(Listitem.Property(mediaTag::videoResolution))</visible>
				<height>40</height>
				<width min="1" max="95">auto</width>
				<info>Listitem.Property(mediaTag::videoResolution)</info>
				<aspectratio>keep</aspectratio>
			</control>
 
			<control type="image">
				<visible>!IsEmpty(Listitem.Property(mediaTag::audioCodec))</visible>
				<height>40</height>
				<width min="1" max="95">auto</width>
				<info>Listitem.Property(mediaTag::audioCodec)</info>
				<aspectratio>keep</aspectratio>
			</control>
 
			<control type="image">
				<visible>!IsEmpty(Listitem.Property(mediaTag::videoCodec))</visible>
				<height>40</height>
				<width min="1" max="95">auto</width>
				<info>Listitem.Property(mediaTag::videoCodec)</info>
				<aspectratio>keep</aspectratio>
			</control>

			<control type="image">
				<visible>!IsEmpty(Listitem.Property(mediaTag::audioChannels))</visible>
				<height>40</height>
				<width min="1" max="95">auto</width>
				<info>Listitem.Property(mediaTag::audioChannels)</info>
				<aspectratio>keep</aspectratio>
			</control>
		</control>

		<control type="image">
			<visible>!IsEmpty(Listitem.Property(mediaTag::studio)) + !Container.Content(tvshows)</visible>
			<posx>500</posx>
			<posy>-35</posy>
			<height>90</height>
			<width min="1" max="95">auto</width>
			<info>Listitem.Property(mediaTag::studio)</info>
			<aspectratio>keep</aspectratio>
		</control>

		<control type="image">
			<visible>!IsEmpty(Listitem.Property(mediaTag::studio)) + Container.Content(tvshows)</visible>
			<posx>565</posx>
			<posy>-70</posy>
			<height>60</height>
			<width min="1" max="135">auto</width>
			<info>Listitem.Property(mediaTag::studio)</info>
			<aspectratio>keep</aspectratio>
		</control>

	</include> 
