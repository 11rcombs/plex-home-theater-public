<?xml version="1.0"?>
<includes>
	<include name="leftMenuInitSlide">
		<animation effect="slide" start="-100" end="0" time="400">Visible</animation>
	</include>
	<include name="leftMenuSlide">
		<animation effect="slide" start="123" end="0" time="500" condition="!ControlGroup(1300).HasFocus()">Conditional</animation>
		<animation effect="slide" start="0" end="123" time="500" condition="ControlGroup(1300).HasFocus()">Conditional</animation>
	</include>
	<include name="rightSideSlide">
		<include>leftMenuSlide</include>
		<animation effect="fade" start="60" end="100" time="500" condition="!ControlGroup(1300).HasFocus()">Conditional</animation>
		<animation effect="fade" start="100" end="60" time="300" condition="ControlGroup(1300).HasFocus()">Conditional</animation>
	</include>
	<include name="leftMenuBg">
		<control type="group">
			<include>leftMenuSlide</include>
			<!-- Background -->
			<control type="image">
				<posx>-253</posx>
				<posy>48</posy>
				<height>680</height>
				<width>253</width>
				<include>Black</include>
				<animation type="Conditional" condition="true">
					<effect type="fade" start="0" end="75"/>
				</animation>
			</control>
			<control type="image">
				<posy>48</posy>
				<posx>0</posx>
				<width>74</width>
				<height>720</height>
