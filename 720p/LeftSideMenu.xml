<?xml version="1.0"?>
<includes>
	<include name="leftMenuInitSlide">
		<animation effect="slide" start="-100" end="0" time="400">Visible</animation>
	</include>
	<include name="leftMenuSlide">
		<animation effect="slide" start="0" end="246" time="500" condition="ControlGroup(1300).HasFocus()">Conditional</animation>
		<animation effect="slide" start="0" end="-246" time="500" condition="ControlGroup(1300).HasFocus()">WindowClose</animation>
		<animation effect="slide" start="0" end="-246" time="500" condition="ControlGroup(1300).HasFocus() + Container.Content(secondary)">Conditional</animation>
	</include>
	<include name="rightSideSlide">
		<include>leftMenuSlide</include>
		<animation effect="fade" start="100" end="50" time="300" condition="ControlGroup(1300).HasFocus()">Conditional</animation>
	</include>
	<include name="leftMenuBg">
		<control type="group">
			<!-- Background -->
			<control type="image">
				<posx>-253</posx>
				<posy>48</posy>
				<height>680</height>
				<width>253</width>
				<include>Black</include>
				<animation type="Conditional" condition="true">
					<effect type="fade" start="0" end="75"/>
				</animation>
			</control>
			<control type="image">
				<posy>48</posy>
				<posx>0</posx>
				<width>74</width>
				<height>720</height>
				<include>Black</include>
			</control>
			<control type="image">
				<posy>500</posy>
				<posx>74</posx>
				<width>15</width>
				<height>31</height>
				<aspectratio>scale</aspectratio>
				<texture>arrow-big.png</texture>
				<colordiffuse>FF000000</colordiffuse>
			</control>
			<control type="image">
				<posy>70</posy>
				<posx>25</posx>
				<width>24</width>
				<height>24</height>
				<aspectratio>keep</aspectratio>
				<texture>left-menu-filters-icon.png</texture>
				<colordiffuse>FF999999</colordiffuse>
				<visible>Container.content(movies) | Container.content(tvshows)</visible>
			</control>
			<control type="image">
				<posy>680</posy>
				<posx>30</posx>
				<width>12</width>
				<height>17</height>
				<aspectratio>scale</aspectratio>
				<texture flipx="true">left-menu-indicator-arrow.png</texture>
				<visible>!ControlGroup(1300).HasFocus</visible>
			</control>
			<control type="image">
				<posy>680</posy>
				<posx>30</posx>
				<width>12</width>
				<height>17</height>
				<aspectratio>scale</aspectratio>
				<texture>left-menu-indicator-arrow.png</texture>
				<visible>ControlGroup(1300).HasFocus</visible>
			</control>
		</control>
	</include>
	<include name="leftMenuTitle">
		<textoffsety>5</textoffsety>
		<textoffsetx>60</textoffsetx>
		<font>Condensed-26</font>
		<height>55</height>
		<textcolor>FFCCCCCC</textcolor>
		<shadowcolor>black</shadowcolor>
		<texturenofocus>-</texturenofocus>
		<animation effect="fade" start="100" end="100" time="0" condition="true">Conditional</animation>
		<align>right</align>
		<width>278</width>
	</include>
	<include name="leftMenuSpacing">
		<height>45</height>
	</include>
	<include name="leftMenuFormat">
		<width>230</width>
		<height>26</height>
		<align>right</align>
		<textoffsety>5</textoffsety>
		<textoffsetx>34</textoffsetx>
		<font>Condensed-17</font>
		<shadowcolor>ff222222</shadowcolor>
		<textcolor>FFCCCCCC</textcolor>
		<focusedcolor>orangeLight</focusedcolor>
		<texturefocus>-</texturefocus>
		<texturenofocus>-</texturenofocus>
		<animation type="Conditional" condition="true">
			<effect type="fade" start="0" end="100"/>
		</animation>
	</include>
	<include name="leftSubMenuFormat">
		<width>260</width>
		<height>26</height>
		<align>left</align>
		<textoffsety>5</textoffsety>
		<textoffsetx>10</textoffsetx>
		<font>Condensed-17</font>
		<shadowcolor>ff222222</shadowcolor>
		<textcolor>FFCCCCCC</textcolor>
		<focusedcolor>orangeLight</focusedcolor>
		<texturefocus>-</texturefocus>
		<texturenofocus>-</texturenofocus>
		<animation type="Conditional" condition="true">
			<effect type="fade" start="0" end="100"/>
		</animation>
	</include>
	<include name="leftMenuFormatPreplay">
		<width>230</width>
		<height>24</height>
		<align>right</align>
		<textoffsety>5</textoffsety>
		<textoffsetx>0</textoffsetx>
		<font>Condensed-26</font>
		<shadowcolor>ff222222</shadowcolor>
		<textcolor>FFCCCCCC</textcolor>
		<focusedcolor>orangeLight</focusedcolor>
		<texturefocus>-</texturefocus>
		<texturenofocus>-</texturenofocus>
		<animation type="Conditional" condition="true">
			<effect type="fade" start="0" end="100"/>
		</animation>
	</include>
	<include name="leftMenuRadioButton">
		<description>default radio button</description>
		<textureradiofocus>left-menu-ticked-icon.png</textureradiofocus>
		<textureradionofocus>-</textureradionofocus>
		<align>right</align>
		<aligny>center</aligny>
		<pulseonselect>false</pulseonselect>
		<radioheight>14</radioheight>
		<radiowidth>20</radiowidth>
	</include>
	<include name="leftSubMenuRadioButton">
		<description>default radio button</description>
		<textureradiofocus>left-menu-ticked-icon.png</textureradiofocus>
		<textureradionofocus>-</textureradionofocus>
		<align>right</align>
		<aligny>center</aligny>
		<pulseonselect>false</pulseonselect>
		<radioheight>14</radioheight>
		<radiowidth>20</radiowidth>
	</include>
	<include name="leftMenuSortingButton">
		<description>sorting radio button</description>
		<textureradiofocus>arrow-big-up.png</textureradiofocus>
		<textureradionofocus flipy="true">arrow-big-up.png</textureradionofocus>
		<align>right</align>
		<aligny>center</aligny>
		<pulseonselect>false</pulseonselect>
		<radioheight>14</radioheight>
		<radiowidth>20</radiowidth>
	</include>
	<!-- Library menu -->
	<include name="LeftSideMenu">
		<control type="group">
			<visible>!Container.Content(secondary)</visible>
			<include>leftMenuInitSlide</include>
			<include>leftMenuSlide</include>
			<include>leftMenuBg</include>
			<control type="image">
				<posy>75</posy>
				<posx>-217</posx>
				<width>184</width>
				<height>32</height>
				<aspectratio>keep</aspectratio>
				<texture>left-menu-search-field-bg.png</texture>
				<visible>![Container.Content(Seasons) | Container.Content(episodes)]</visible>
			</control>
			<!-- filters & sorting menu -->
			<control type="group" id="1300">
				<visible allowhiddenfocus="false">!Container.Content(secondary)</visible>
				<posx>-253</posx>
				<posy>0</posy>
				<width>253</width>
				<height>650</height>
				<onup>-</onup>
				<ondown>19000</ondown>
				<onright>777</onright>
				<orientation>vertical</orientation>
				<scrolltime>150</scrolltime>
				<!-- filters list -->
				<control type="grouplist" id="19000">
					<posy>154</posy>
					<posx>10</posx>
					<onup>-</onup>
					<ondown>19010</ondown>
					<onleft>-</onleft>
					<onright>777</onright>
					<itemgap>0</itemgap>
				</control>
				<!-- filters buttons -->
				<control type="button" id="19001">
					<textoffsetx>30</textoffsetx>
					<include>leftMenuFormat</include>
				</control>
				<control type="radiobutton" id="19002">
					<textoffsetx>30</textoffsetx>
					<include>leftMenuFormat</include>
					<include>leftMenuRadioButton</include>
				</control>
				<control type="spincontrolex" id="19003">
					<textoffsetx>30</textoffsetx>
					<include>leftMenuFormat</include>
				</control>
				<!-- sorting list -->
				<control type="grouplist" id="19010">
					<posy>454</posy>
					<posx>10</posx>
					<onup>19000</onup>
					<ondown>-</ondown>
					<onleft>-</onleft>
					<onright>777</onright>
					<itemgap>0</itemgap>
				</control>
				<!-- sorting buttons -->
				<control type="radiobutton" id="19011">
					<textoffsetx>30</textoffsetx>
					<include>leftMenuFormat</include>
					<include>leftMenuSortingButton</include>
				</control>
				<!-- filters sub-menu -->
				<control type="group">
					<visible allowhiddenfocus="false">true</visible>
					<animation effect="fade" time="300">Visible</animation>
					<animation effect="fade" time="100">Hidden</animation>
					<posx>360</posx>
					<posy>160</posy>
					<!-- sub-list backgrounds -->
					<control type="group">
						<control type="image">
							<description>Background</description>
							<width>292</width>
							<height>420</height>
							<include>DialogBG</include>
						</control>
						<control type="image">
							<description>Title bg</description>
							<width>292</width>
							<height>50</height>
							<include>DialogHeaderBG</include>
							<visible>Control.IsVisible(19021)</visible>
						</control>
						<control type="image">
							<description>Title bg bottom border</description>
							<width>290</width>
							<include>DialogHeaderBorder</include>
						</control>
						<control type="image">
							<description>Background border</description>
							<width>294</width>
							<height>422</height>
							<include>DialogBorder</include>
						</control>
						<control type="image">
							<description>Dialog arrow</description>
							<posx>-14</posx>
							<posy>100</posy>
							<include>ArrowBlackLeft</include>
						</control>
					</control>	
					<!-- sub-list -->
					<control type="group" id="1400">
						<visible allowhiddenfocus="false">true</visible>
						<posy>24</posy>
						<!-- sub-list title -->
						<control type="label" id="19029">
							<description>Heading</description>
							<width>300</width>
							<include>DialogHeading</include>
							<label>FILTERS</label>
						</control>
						<control type="grouplist" id="19020">
							<width>300</width>
							<height>340</height>
							<posy>40</posy>
							<posx>10</posx>
							<onup>19020</onup>
							<ondown>19020</ondown>
							<onleft>19000</onleft>
							<onright>-</onright>
							<itemgap>5</itemgap>
							<pagecontrol>61</pagecontrol>
							<scrolltime>350</scrolltime>
						</control>
						<!-- sub-list buttons -->
						<control type="radiobutton" id="19021">
							<textoffsetx>10</textoffsetx>
							<include>leftSubMenuFormat</include>
						</control>
						<control type="scrollbar" id="61">
							<description>Scroll Bar</description>
							<posx>265</posx>
							<posy>33</posy>
							<width>24</width>
							<height>310</height>
							<showonepage>true</showonepage>
						</control>
					</control>			
				</control>
			</control>			
		</control>
	</include>
</includes>
