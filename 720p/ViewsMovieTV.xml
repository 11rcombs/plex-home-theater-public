<?xml version="1.0"?>
<includes>
	<!-- Library -->
	<include name="VideoLibrary">
		<!-- Library Movies & TV Shows -->
		<control type="group" id="777">
			<include>FadeDialog</include>
			<visible>!Container.Content(Seasons) + !Container.Content(Episodes) + !Container.Content(secondary) + !Container.content(plugins)</visible>
			<include>rightSideSlide</include>
			<control type="panel" id="52">
				<visible>!Container.Content(Seasons) + !Container.Content(Episodes) + !Container.Content(secondary) + !Container.content(plugins)</visible>
				<viewtype label="Posters">panel</viewtype>
				<onup>52</onup>
				<ondown>52</ondown>
				<onright>52</onright>
				<onleft>9100</onleft>
				<orientation>vertical</orientation>
				<posx>102</posx>
				<posy>64</posy>
				<width>1150</width>
				<height>635</height>
				<itemlayout width="223" height="315">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>208</width>
						<height>299</height>
						<include>Shadow</include>
					</control>
					<control type="image">
						<description>Poster image</description>
						<posx>13</posx>
						<posy>13</posy>
						<width>182</width>
						<height>273</height>
						<texture background="true" diffuse="mask-poster-middle.png">$INFO[ListItem.Thumb]</texture>
						<aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
					</control>
					<control type="label">
						<description>Poster label</description>
						<posy>290</posy>
						<posx>105</posx>
						<width>180</width>
						<height>30</height>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<font>Condensed-17</font>
						<textcolor>white</textcolor>
						<shadowcolor>ff333</shadowcolor>
					</control>
					<control type="image">
						<visible>[Container.Content(movies) + [ListItem.Status(InProgress) + !Skin.HasSetting(HideInprogressIconsMovies)] | [ListItem.Status(Unwatched) + !Skin.HasSetting(HideUnwatchedIconsMovies)]] | [Container.Content(tvshows) + [ListItem.Status(InProgress) + !Skin.HasSetting(HideInprogressIconsTVShows)] | [ListItem.Status(Unwatched) + !Skin.HasSetting(HideUnwatchedIconsTVShows)]]</visible>
						<posx>169</posx>
						<posy>260</posy>
						<info>ListItem.Overlay</info>
					</control>
				</itemlayout>
				<focusedlayout width="223" height="315">
					<!-- drop shadow -->
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>208</width>
						<height>299</height>
						<include>Shadow</include>
					</control>
					<control type="image">
						<description>Poster image</description>
						<posx>10</posx>
						<posy>10</posy>
						<width>188</width>
						<height>279</height>
						<texture background="true" diffuse="mask-poster-middle.png">$INFO[ListItem.Thumb]</texture>
						<aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
						<include>Border</include>
					</control>
					<control type="label">
						<posy>290</posy>
						<posx>105</posx>
						<width>180</width>
						<height>30</height>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<font>Condensed-17</font>
						<textcolor>orangeLight</textcolor>
						<shadowcolor>FF222222</shadowcolor>
					</control>
					<control type="image">
						<visible>[ListItem.Status(InProgress) + !Skin.HasSetting(HideInprogressIconsMovies)] | [ListItem.Status(Unwatched) + !Skin.HasSetting(HideUnwatchedIconsMovies)]</visible>
						<posx>169</posx>
						<posy>260</posy>
						<info>ListItem.Overlay</info>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>
