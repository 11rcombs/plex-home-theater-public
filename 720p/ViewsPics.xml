						<posy>11</posy>
						<width>158</width>
						<height>158</height>
						<aspectratio scalediffuse="true" align="center">stretch</aspectratio>
						<texture background="true" border="13">posterFrameSmallShadow3.png</texture>
					</control>
					<control type="image">
						<posx>20</posx>
