	<include name="ImageStream">
		<control type="group">
			<visible>!Container.Content(Secondary) + !Container.Content(plugins)</visible>
		<control type="group">
			<include>ImageStreamVisible</include>
			<include>BackgroundOverlayFade</include>
			<control type="image">
				<description>Background</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<aspectratio aligny="top">scale</aspectratio>
				<texture background="true">grainy_black_bg.png</texture>
				<align>center</align>
			</control>
			<include>MovieViewBGOverlay</include>
			<control type="group">
				<visible>!Container.OnNext + !Container.OnPrevious</visible>
				<animation effect="fade" start="0" end="100" time="1000" delay="300" condition="Control.HasFocus(57)" reversible="false">Conditional</animation>
				<animation effect="fade" start="0" end="100" time="2000" delay="0">WindowOpen</animation>
				<animation effect="fade" start="0" end="100" time="400" delay="0">Visible</animation>
				<animation effect="fade" start="0" end="0" time="0">Hidden</animation>
				<control type="grouplist">
					<width>4000</width>
					<align>center</align>
					<posy>49</posy>
					<posx>-1360</posx>
					<orientation>horizontal</orientation>
					<itemgap>0</itemgap>
					<!-- left photo -->
					<control type="largeimage">
						<height>455</height>
						<width>800</width>
						<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
						<texture background="true">$INFO[ListItem(-2).FileNameAndPath]</texture>
						<animation effect="fade" start="0" end="20" time="250" delay="0" condition="true">Conditional</animation>
					</control>
					<control type="largeimage">
						<height>455</height>
						<width>800</width>
						<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
						<texture background="true">$INFO[ListItem(-1).FileNameAndPath]</texture>
						<animation effect="fade" start="0" end="20" time="250" delay="0" condition="true">Conditional</animation>
					</control>
					<!-- focused photo -->
					<control type="largeimage">
						<description>Image</description>
						<height>455</height>
						<width>auto</width>
						<aspectratio>keep</aspectratio>
						<info>ListItem(0).FileNameAndPath</info>
					</control>
					<!-- right photo -->
					<control type="largeimage">
						<height>455</height>
						<width>800</width>
						<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
						<texture background="true">$INFO[ListItem(1).FileNameAndPath]</texture>
						<animation effect="fade" start="0" end="20" time="250" delay="0" condition="true">Conditional</animation>
					</control>
					<control type="largeimage">
						<height>455</height>
						<width>800</width>
						<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
						<texture background="true">$INFO[ListItem(2).FileNameAndPath]</texture>
						<animation effect="fade" start="0" end="20" time="250" delay="0" condition="true">Conditional</animation>
					</control>
				</control>
			</control>
		</control>
		<control type="group">
			<posy>500</posy>
			<include>ImageStreamVisible</include>
			<include>MediaViewFade</include>
