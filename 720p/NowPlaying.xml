<window id="50">
  
  <animation effect="fade" start="0" end="100" time="1000" reversible="true">WindowOpen</animation>
  <animation effect="fade" start="100" end="0" time="1000" reversible="true">WindowClose</animation>

  <controls>
    <control type="image" id="0">
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
      <texture>NowPlayingBG.png</texture>  
    </control>
    
    <control type="group" id="1">
      <description>Album covers</description>
      <posx>587</posx>
      <posy>204</posy>
      <width>1280</width>
      <height>720</height>

      <control type="group">
        <description>Next cover</description>
        <posx>226</posx>
        <posy>40</posy>
        <visible>MusicPlayer.HasNext</visible>
        
        <control type="image" id="0">
          <width>264</width>
          <height>264</height>
          <info>MusicPlayer.Offset(1).Cover</info>
          <aspectratio>stretch</aspectratio>
          <texture diffuse="NowPlayingSmallCoverDiffuse.png"/>
        </control>
        <control type="image" id="0">
          <posy>264</posy>
          <width>264</width>
          <height>264</height>
          <info>MusicPlayer.Offset(1).Cover</info>
          <aspectratio>stretch</aspectratio>
          <texture flipy="true" diffuse="NowPlayingSmallReflectionDiffuse.png"/>
        </control>
        <control type="image" id="0">
          <posx>41</posx>
          <width>176</width>
          <height>264</height>
          <aspectratio>stretch</aspectratio>
          <texture>NowPlayingCoverShadow.png</texture>
        </control>
      </control>
      
      <control type="group">
        <description>Current cover</description>
        <visible>Player.HasAudio</visible>
        
        <control type="image" id="0">
          <posy>332</posy>
          <width>330</width>
          <height>330</height>
          <info>MusicPlayer.Cover</info>
          <aspectratio>stretch</aspectratio>
          <texture flipy="true" diffuse="NowPlayingReflectionDiffuse.png"/>
        </control>
        <control type="image">
          <posx>-2</posx>
          <posy>-1</posy>
          <width>341</width>
          <height>341</height>
          <aspectratio>stretch</aspectratio>
          <texture>NowPlayingCoverDropShadow.png</texture>
        </control>
        <control type="image" id="0">
          <width>330</width>
          <height>330</height>
          <info>MusicPlayer.Cover</info>
          <aspectratio>stretch</aspectratio>
          <texture diffuse="NowPlayingCoverDiffuse.png"/>
        </control>
      </control>
    </control>


    <control type="group">
      <description>Info</description>
      <posx>60</posx>
      <posy>220</posy>
      
      <control type="group">
        <description>Current track info</description>
        <visible>Player.HasAudio</visible>
        
        <control type="label" id="0">
          <posx>500</posx>
          <width>500</width>
          <font>NPArtistFont</font>
          <textcolor>Dark</textcolor>
          <label>$INFO[MusicPlayer.Artist]</label>
          <align>right</align>
        </control>
    
        <control type="label" id="0">
          <posx>500</posx>
          <posy>55</posy>
          <width>500</width>
          <font>NPTitleFont</font>
          <textcolor>Medium</textcolor>
          <label>$INFO[MusicPlayer.Title]</label>
          <align>right</align>
        </control>
    
        <control type="label" id="0">
          <posx>500</posx>
          <posy>88</posy>
          <width>500</width>
          <font>NPAlbumFont</font>
          <textcolor>Light</textcolor>
          <label>$INFO[MusicPlayer.Album]</label>
          <align>right</align>
        </control>
      </control>
      
      <control type="progress" id="20">
        <description>Progress control</description>
        <posx>129</posx>
        <posy>162</posy>
        <aligny>center</aligny>
        <width>372</width>
        <info>Player.Progress</info>
        <visible>Player.HasAudio</visible>
      </control>
      
      <control type="group">
        <description>Next track info</description>
        <posy>219</posy>
        <visible>MusicPlayer.HasNext</visible>
        
        <control type="label" id="0">
          <posx>500</posx>
          <width>500</width>
          <font>NPNextFont</font>
          <textcolor>Dark</textcolor>
          <label>Next Track</label>
          <align>right</align>
        </control>
        
        <control type="label" id="0">
          <posx>500</posx>
          <posy>32</posy>
          <width>500</width>
          <font>NPNextFont</font>
          <textcolor>Medium</textcolor>
          <label>$INFO[MusicPlayer.Offset(1).Artist]</label>
          <align>right</align>
        </control>
        
        <control type="label" id="0">
          <posx>500</posx>
          <posy>53</posy>
          <width>500</width>
          <font>NPNextFont</font>
          <textcolor>Light</textcolor>
          <label>$INFO[MusicPlayer.Offset(1).Title]</label>
          <align>right</align>
        </control>
      </control>
    </control>

  </controls>

</window>