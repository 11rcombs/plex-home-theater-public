<window id="50">
  
  <animation effect="fade" start="0" end="100" time="1000" reversible="true">WindowOpen</animation>
  <animation effect="fade" start="100" end="0" time="1000" reversible="true">WindowClose</animation>

  <controls>
    <control type="image" id="0">
      <posx>0</posx>
      <posy>0</posy>
      <width>1280</width>
      <height>720</height>
      <texture>NowPlayingBG.png</texture>  
    </control>
    
    <control type="group" id="1">
      <description>Album covers</description>
      <posx>587</posx>
      <posy>204</posy>

      <control type="group">
        <posx>226</posx>
        <posy>40</posy>
        <include>NowPlayingNextCover</include>
      </control>
      <include>NowPlayingCurrentCover</include>
    </control>


    <control type="group">
      <description>Info</description>
      <posx>60</posx>
      <posy>220</posy>
      
      <include>NowPlayingCurrentInfo</include>
      
      <control type="progress" id="20">
        <description>Progress control</description>
        <posx>129</posx>
        <posy>162</posy>
        <aligny>center</aligny>
        <width>372</width>
        <info>Player.Progress</info>
        <visible>Player.HasAudio</visible>
      </control>
      
      <control type="group">
        <posy>219</posy>
        <include>NowPlayingNextInfo</include>
      </control>
    </control>

  </controls>

</window>